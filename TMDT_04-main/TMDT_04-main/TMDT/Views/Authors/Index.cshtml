@model IEnumerable<TMDT.Models.Author>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<button class="btn btn-sm btn-default" style="margin-bottom:10px">
    @Html.ActionLink("Create New", "Create")
</button>
<table class="table table-bordered"  id="dataTable" width="100%" height="100%" cellspacing="2">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AuthorName)
            </th>
            <th>Công cụ</th>
        </tr>
        </thead>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.AuthorName)
                </td>
                <td>
                    <a href="@Url.Action("Edit","Authors",new { id = item.AuthorID })" class="btn">
                        <i class="far fa-edit fa-2x" style="color:#FFDAC1"></i>
                    </a>
                    <a href="@Url.Action("Details","Authors",new { id = item.AuthorID })" class="btn">
                        <i class="fa fa-sticky-note fa-2x" style="color:#83d9dc" aria-hidden="true"></i>

                    </a>
                    <a href="@Url.Action("Delete","Authors",new { id = item.AuthorID })" class="btn">
                        <i class="fa fa-trash fa-2x" style="color:#FF9AA2" aria-hidden="true"></i>
                    </a>
                </td>
            </tr>
        }

</table>
