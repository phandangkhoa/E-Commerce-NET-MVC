@using TMDT.Models
@model LoginViewModel
@{ ViewBag.Title = "Log in"; }


<div class="row login_user">
    <div class="col-md-8">
        <section id="loginForm">
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal form_login", role = "form" }))
            {
@Html.AntiForgeryToken()

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="form-group">

                                    <div class="">
                                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control input_login", @placeholder = "Email" })
                                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                                <div class="form-group">

                                                    <div class="">
                                                        @Html.PasswordFor(m => m.Password, new { @class = "form-control input_login", @placeholder = "Mật khẩu" })
                                                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                                    </div>
                                                </div>
                                                                <div class="form-group">
                                                                    <div class="c">
                                                                        <div class="checkbox">
                                                                            @Html.CheckBoxFor(m => m.RememberMe, new { @class = "check_box" })
                                                                            @Html.LabelFor(m => m.RememberMe)
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                                                <div class="form-group">
                                                                                    <div class="">
                                                                                        <input type="submit" value="Log in" class="btn btn-success btn_login" />
                                                                                    </div>
                                                                                </div>
                                                                                                <div class="new_acc">
                                                                                                    @Html.ActionLink("Đăng ký tài khoản mới..!", "Register")
                                                                                                </div>            }
        </section>
    </div>

</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}